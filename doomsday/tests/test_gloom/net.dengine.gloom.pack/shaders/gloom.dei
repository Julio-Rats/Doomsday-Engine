@include <indirect.dei>
@include <entity.dei>

group gloom {
    shader surface        { path = "surface" }
    shader shadow.surface { path = "shadow" }
    shader ssao.sample    { path = "ssao" }
    shader ssao.denoise {
        path.vertex   = "ssao.vsh"
        path.fragment = "ssao_denoise.fsh"
    }
    shader lighting.global  { path = "gi" }
    shader lighting.sources { path = "lighting" }
    shader tonemap {
        path.vertex = "common/mvp_vertex_uv.vsh"
        path.fragment = "tonemap.fsh"
    }
    shader finalize {
        path.vertex = "common/mvp_vertex_uv.vsh"
        path.fragment = "finalize.fsh"
    }
}
